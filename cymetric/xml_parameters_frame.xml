<?xml version="1.0" encoding="utf-8"?>
<!-- frame for xml parameters file -->
<model>
	<iterations></iterations> <!--number of simulations desired (useful with random parameters)-->

	<region>
		<id></id>
		<institution>
			<id></id>
			<facility>
				<id></id>
			</facility>
		</institution>
	</region>

	<region>
		<id></id>
	</region>

<!--  if absent, look for it at a lower level (ie Region) -->
	<finance>
		<discount_rate></discount_rate>
		<tax_rate></tax_rate> <!-- % -->
		<depreciation_schedule></depreciation_schedule> <!-- depreciation type -->
		<depreciation_time></depreciation_time> <!-- months -->
		<external_cost></external_cost> <!-- $/MWh -->
		<CO2_price></CO2_price> <!-- $/tonCO2 -->
		<initial_BC></initial_BC> <!-- $/MWh -->
		<delta_BC></delta_BC> <!-- $/MWh -->
	</finance>

	<capital>
		<!--<mode></mode>  <!-- "default", "own" or "random" -->-->
		<begin></begin>  <!-- months before commissioning -->
		<duration></duration>  <!-- duration of construction in months -->
		<pace></pace>  <!-- "normal", "rapid" or "slow" -->
		<costs_shape></costs_shape>  <!-- "linear" or "random" -->
		<overnight_cost></overnight_cost>  <!-- $/MW -->
	</capital>

	<decommissioning>
		<mode></mode> <!-- "default" "own" or "random" -->
		<begin></begin> <!-- months after decommissioning -->
		<duration></duration> <!-- duration of decommissioning in months -->
		<pace></pace> <!-- "normal", "rapid" or "slow" -->
		<costs_shape></costs_shape> <!-- "linear" or "random" -->
		<overnight_cost></overnight_cost> <!-- $/MW -->
	</decommissioning>

	<operation_maintenance>
		<fixed></fixed>  <!-- $/MW -->
		<variable></variable>  <!-- $/MWh -->
	</operation_maintenance>

	<fuel_cost>
		<yellow_cake></yellow_cake> <!-- $/kg -->
		<conversion_cost></conversion_cost> <!-- $/kg -->
		<swu></swu> <!-- $/swu -->
		<UO2></UO2> <!-- $/kg -->
		<Pu></Pu> <!-- $/kg -->
	</fuel_cost>

	<waste_fee>
	</waste_fee>
</model>
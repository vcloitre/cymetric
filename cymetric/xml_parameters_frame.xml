<?xml version="1.0" encoding="utf-8"?>
<!-- frame for xml parameters file -->
<model>
	<iterations></iterations> <!--number of simulations desired (useful with random parameters)-->

	<region>
		<id></id>
		<institution>
			<id></id>
			<facility>
				<id></id>
			</facility>
		</institution>
	</region>

	<region>
		<id></id>
	</region>

<!--  if absent, look for it at a lower level (ie Region) -->
	<finance>
		<discount_rate></discount_rate>
		<tax_rate></tax_rate> <!-- % -->
		<return_on_debt></return_on_debt>
		<return_on_equity></return_on_equity>
	</finance>

	<capital>
		<deviation></deviation>  <!-- random -->-->
		<begin></begin>  <!-- months before commissioning -->
		<duration></duration>  <!-- duration of construction in months -->
		<!--<pace></pace>  <!-- "normal", "rapid" or "slow" -->-->
		<overnight_cost></overnight_cost>  <!-- $/MW -->
	</capital>

	<decommissioning>
		<duration></duration> <!-- duration of decommissioning in months -->
		<overnight_cost></overnight_cost> <!-- $/MW -->
	</decommissioning>

	<operation_maintenance>
		<fixed></fixed>  <!-- $/MW -->
		<variable></variable>  <!-- $/MWh -->
	</operation_maintenance>

	<fuel>
		<type>
			<name></name>
			<supply_cost></supply_cost>
			<waste_fee></waste_fee> <!-- $/kg -->
		</type> <!-- fuel 1 -->
		<type>
			<name></name>
			<supply_cost></supply_cost>
			<waste_fee></waste_fee> <!-- $/kg -->
		</type> <!-- fuel 2 -->
	</fuel>

	<waste_fee>
	</waste_fee>
	
	<truncation>
		<simulation_begin>0</simulation_begin><!--all reactors commissionned at this date will be included in the costs calculations-->
		<simulation_end>1200</simulation_end><!--all reactors commissionned at this date will be included in the costs calculations (for lcoe, costs for decommissioning will be included). Warning : if reactors are not decommissionned at the end of the simulation, warning message-->
	</truncation>
</model>